<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/race_detial_info_match_name_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_header_race_detial_layout_racename_height">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/race_detial_info_detial_show"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/list_header_race_detial_imageview_racedetialshow_marginright"
            app:srcCompat="@drawable/ic_arrow_down" />

        <com.cpigeon.app.utils.customview.MarqueeTextView
            android:id="@+id/race_detial_info_textview_racename"
            style="@style/Marquee"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_header_race_detial_textview_racename_height"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/race_detial_info_detial_show"
            android:gravity="center"
            android:padding="8dp"
            android:text="江苏姜堰市强豪赛鸽俱乐部信鸽竞翔原始记录实时显示"
            android:textColor="@color/light_black"
            android:textSize="@dimen/list_header_race_detial_textview_racename_textsize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_line_width"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLayoutSplitLineGray"></View>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_report_info_detial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/list_header_race_detial_layout_detial_padding"
        android:paddingRight="@dimen/list_header_race_detial_layout_detial_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/layout_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/race_detial_match_info_title_area"
                    style="@style/report_info_detial_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pigeon_special_words_race_detial_area" />

                <TextView
                    android:id="@+id/race_detial_match_info_content_area"
                    style="@style/report_info_detial_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="四川成都" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_kj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/race_detial_match_info_title_kj"
                    style="@style/report_info_detial_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pigeon_special_words_race_detial_ckkj" />

                <TextView
                    android:id="@+id/race_detial_match_info_content_kj"
                    style="@style/report_info_detial_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="359.256KM" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_caipanzhang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/race_detial_match_info_title_caipanzhang"
                    style="@style/report_info_detial_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="裁判长" />

                <TextView
                    android:id="@+id/race_detial_match_info_content_caipanzhang"
                    style="@style/report_info_detial_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5868羽" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sifangzhang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/race_detial_match_info_title_sifangzhang"
                    style="@style/report_info_detial_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="司放长" />

                <TextView
                    android:id="@+id/race_detial_match_info_content_sifangzhang"
                    style="@style/report_info_detial_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="多云转阴" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_caipanyuan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/race_detial_match_info_title_caipanyuan"
                style="@style/report_info_detial_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="裁判员" />

            <TextView
                android:id="@+id/race_detial_match_info_content_caipanyuan"
                style="@style/report_info_detial_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5868羽" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_slys"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/race_detial_match_info_title_slys"
                    style="@style/report_info_detial_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/pigeon_special_words_race_detial_sfys" />

                <TextView
                    android:id="@+id/race_detial_match_info_content_slys"
                    style="@style/report_info_detial_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5868羽" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_tq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/race_detial_match_info_title_tq"
                    style="@style/report_info_detial_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pigeon_special_words_race_detial_tq" />

                <TextView
                    android:id="@+id/race_detial_match_info_content_tq"
                    style="@style/report_info_detial_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="多云转阴" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/race_detial_match_info_title_st"
                style="@style/report_info_detial_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pigeon_special_words_race_detial_sfsj" />

            <TextView
                android:id="@+id/race_detial_match_info_content_st"
                style="@style/report_info_detial_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2016-11-25 09:33:33" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_sfzb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/race_detial_match_info_title_jwd"
                style="@style/report_info_detial_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/pigeon_special_words_race_detial_sfzb" />

            <TextView
                android:id="@+id/race_detial_match_info_content_jwd"
                style="@style/report_info_detial_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="116.493383/23.340760" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_line_width"
            android:background="@color/colorLayoutSplitLineGray"></View>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_gg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_layout_gg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/list_header_race_detial_layout_gg_paddingbottom"
        android:paddingLeft="@dimen/list_header_race_detial_layout_gg_paddingleft"
        android:paddingRight="@dimen/list_header_race_detial_layout_gg_paddingright"
        android:paddingTop="@dimen/list_header_race_detial_layout_gg_paddingtop">

        <com.cpigeon.app.utils.customview.MarqueeTextView
            android:id="@+id/list_header_race_detial_gg"
            style="@style/Marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/list_header_race_detial_gg_minheight"
            android:text="公告："
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/list_header_race_detial_textview_gg_textsize"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_list_table_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:minHeight="@dimen/list_header_race_detial_layout_tableheader_minheight"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="序号"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/list_header_race_detial_textview_tableheader_textsize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/list_header_race_detial_textview_tableheader_textsize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/foot_number"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/list_header_race_detial_textview_tableheader_textsize" />

    </LinearLayout>

    <include layout="@layout/layout_com_swiperefreshlayout_recyclerview" />
</LinearLayout>