<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--自定义ActionBar样式-->
    <style name="layout_custom_actionbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="searchedittextstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/search_edit_bg</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableLeft">@mipmap/ic_search</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/textColor_gray2</item>
        <item name="android:textColor">@color/textColor_light_black</item>
        <item name="android:hint">搜索</item>
    </style>

    <style name="SingleLine">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Marquee" parent="SingleLine">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">false</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="race_info_detial_title" parent="SingleLine">
        <item name="android:paddingTop">@dimen/listitem_race_info_detial_title_padding</item>
        <item name="android:paddingBottom">@dimen/listitem_race_info_detial_title_padding</item>
        <item name="android:minWidth">@dimen/listitem_race_info_detial_title_minwidth</item>
        <item name="android:textSize">@dimen/listitem_race_info_detial_title_textsize</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="race_info_detial_content" parent="Marquee">
        <item name="android:paddingTop">@dimen/listitem_race_info_detial_content_padding</item>
        <item name="android:paddingBottom">@dimen/listitem_race_info_detial_content_padding</item>
        <item name="android:layout_marginLeft">@dimen/listitem_race_info_detial_content_marginleft
        </item>
        <item name="android:textSize">@dimen/listitem_race_info_detial_content_textsize</item>
        <item name="android:textColor">@color/light_black2</item>
    </style>


    <style name="foot_search_result_content" parent="Marquee">
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:gravity">center_vertical</item>

        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textColor">@color/textColor_footSearchResultContent</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/fragment_foot_search_textview_promptContent_textsize
        </item>
    </style>

    <style name="raceDetialDataType">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">@dimen/list_header_race_detial_textview_datatype_textsize
        </item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_header_race_detial_data_type_default</item>
    </style>



    <style name="report_info_detial_title" parent="SingleLine">
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:paddingTop">
            @dimen/list_header_race_detial_textview_detial_title_padding
        </item>
        <item name="android:paddingBottom">
            @dimen/list_header_race_detial_textview_detial_title_padding
        </item>
        <item name="android:minWidth">
            @dimen/list_header_race_detial_textview_detial_title_minwidth
        </item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">
            @dimen/list_header_race_detial_textview_detial_title_textsize
        </item>
    </style>

    <style name="report_info_detial_content" parent="Marquee">
        <item name="android:paddingTop">
            @dimen/list_header_race_detial_textview_detial_content_padding
        </item>
        <item name="android:paddingBottom">
            @dimen/list_header_race_detial_textview_detial_content_padding
        </item>
        <item name="android:textColor">@color/light_black2</item>
        <item name="android:layout_marginLeft">
            @dimen/list_header_race_detial_textview_detial_content_marginleft
        </item>
        <item name="android:textSize">
            @dimen/list_header_race_detial_textview_detial_content_textsize
        </item>
    </style>

    <style name="report_info_detial_cz" parent="SingleLine">
        <item name="android:padding">3dp</item>
        <item name="android:minWidth">35dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="foot_search_result_title" parent="SingleLine">
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textColor">@color/textColor_footSearchResultTitle</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:gravity">right|center_vertical</item>

        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/fragment_foot_search_textview_promptContent_textsize
        </item>
    </style>

    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="RegistButton">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/button_primary_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Setting_Item">
        <item name="android:background">@drawable/com_background_clickable_layout_transparent</item>
        <item name="android:paddingLeft">@dimen/sp_20</item>
        <item name="android:paddingRight">@dimen/dp_20</item>
    </style>

    <style name="Setting_Item_Split_Line">
        <item name="android:height">@dimen/dp_1</item>
        <item name="android:layout_marginLeft">@dimen/sp_20</item>
        <item name="android:background">@color/colorLayoutSplitLineGray</item>

    </style>

    <style name="Setting_Item_Name">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="Setting_Item_Explain">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Setting_Item_CheckBox">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Select_Serice_Item_CheckBox">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!--订单支付界面-订单详情标题-->
    <style name="order_info_item_title" parent="SingleLine">
        <item name="android:gravity">left</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:textColor">@color/textColor_light_black</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--订单支付界面-订单详情内容-->
    <style name="order_info_item_content">
        <item name="android:textColor">@color/textColor_gray</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <!--订单支付界面-订单详情项-->
    <style name="order_info_item_layout" parent="SingleLine">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>
    <!--底部弹框-->
    <style name="BottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AnimBottomDialog" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
